<% layout('layouts/boilerplate') %>

<div class="row">
    <div class="col-8 offset-2">
        <h3>Edit Listing</h3>
        <form action="/listings/<%= listing._id %>?_method=PUT" method="POST">
            <div class="mb-3">
                <label for="listing-title" class="form-label">Title :</label>
                <input type="text" class="form-control" value="<%= listing.title %>" id="listing-title" name="listing[title]">
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">Enter Description</label>
                <textarea class="form-control" name="listing[description]"><%= listing.description %></textarea>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <label for="price" class="form-label">Enter Price</label>
                    <input type="number" value="<%= listing.price %>" name="listing[price]" class="form-control">
                </div>

                <div class="col-md-6">
                    <label for="location" class="form-label">Enter Location</label>
                    <input type="text" value="<%= listing.location %>" name="listing[location]" class="form-control">
                </div>
            </div>

            <div class="mb-3">
                <label for="country" class="form-label">Enter Country</label>
                <input type="text" value="<%= listing.country %>" name="listing[country]" class="form-control">
            </div>

            <div class="mb-3">
                <label for="image" class="form-label">Enter Image URL</label>
                <input type="text" value="<%= listing.Image %>" name="listing[image]" class="form-control">
            </div>

            <button class="update_btn mt-2">Update</button>
        </form>
    </div>
</div>
